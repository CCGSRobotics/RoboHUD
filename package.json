{
  "name": "robohud",
  "version": "1.0.0",
  "description": "A GUI stack developed by CCGS Robotics",
  "main": "main.js",
  "repository": "https://github.com/CCGSRobotics/RoboHUD",
  "author": "Angus Finch <developer.finchie@gmail.com>",
  "license": "Apache",
  "private": false,
  "build": {
    "appId": "com.ccgsrobotics.robohud",
    "productName": "RoboHUD",
    "linux": {
      "category": "Robotics",
      "icon": "Assets/icon.png",
      "synopsis": "The RoboHUD GUI, developed by CCGS Robotics"
    },
    "win": {
      "icon": "Assets/icon.ico"
    },
    "files": [
      "**/*",
      "!Server/"
    ]
  },
  "scripts": {
    "build": "node node_modules/electron-builder/out/cli/cli.js . -l AppImage --publish never",
    "build-win": "node node_modules/electron-builder/out/cli/cli.js . -w nsis:ia32 --publish never "
  },
  "remarkConfig": {
    "plugins": ["remark-preset-lint-recommended"]
  },
  "postinstall": "electron-builder install-app-deps",
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "cheerio-tableparser": "^1.0.1",
    "request-promise": "^4.2.4"
  },
  "devDependencies": {
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "eslint": "^6.5.1",
    "eslint-config-google": "^0.14.0",
    "remark-cli": "^7.0.0",
    "remark-preset-lint-recommended": "^3.0.3"
  }
}
